{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"declaration": true,
		"outDir": "debug",
		"baseUrl": ".",
		"paths": {
			"@/*":["src/*"],
		},
		"esModuleInterop": true,
		"inlineSourceMap": true
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	],
	"exclude": [
		"node_modules"
	]
}